    <style>
      h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
      }

      h2 {
        font-size: 1.8em;
        margin: 10px 0;
      }

      p {
        line-height: 1.6;
        margin: 10px 0;
      }

      #book-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 10px rgba(146, 144, 144, 0.1);
        display: flex;
        flex-wrap: wrap;
      }

      #book-container * {
        flex: 1;
      }

      img {
        display: block;
        margin: 0 auto 20px auto;
        border-radius: 4px;
        max-width: 100%;
        height: auto;
      }

      .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      img {
        max-width: 600px;
        width: 100%;
      }

      .cyn {
        padding: 3rem 1rem 1rem 1rem;
      }

      .btn:hover {
        background-color: #0056b3;
      }

      @media screen and (max-width: 694px){
        #book-container {
        flex-direction: column;
      }
      }
    </style>
    <div id="book-container">
      <div class="ctn"><a class="btn" href="/book">Back to books</a>
        <h1><%= book.bookTitle %></h1>
        <img src="<%= book.imageURL %>" alt="<%= book.bookTitle %>" /></div>
      <div class="cyn"><h2>Author: <%= book.authorName %></h2>
        <p><strong>Category:</strong> <%= book.category %></p>
        <p><%= book.bookDescription %></p>
        <a class="btn" href="<%= book.bookPDFURL %>" target="_blank">Read PDF</a></div>
      
      
    </div>
  </body>
</html>
