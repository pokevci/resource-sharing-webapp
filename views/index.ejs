<script>
  const searchInput = document.querySelector(".search-bar");
  const resultsContainer = document.querySelector(".search-results");
  const items = document.querySelectorAll(".item"); // Items to search through

  searchInput.addEventListener("input", () => {
    const query = searchInput.value.toLowerCase().trim(); // Get the user's search input
    resultsContainer.innerHTML = ""; // Clear previous results

    if (query) {
      // Filter items and display matches
      let matches = 0; // To track if any results are found
      items.forEach((item) => {
        if (item.textContent.toLowerCase().includes(query)) {
          matches++;
          const result = document.createElement("p");
          result.textContent = item.textContent; // Copy matching item's content
          result.className = "result-item"; // Add a class for styling
          resultsContainer.appendChild(result); // Add the result to the results container
        }
      });

      // If no matches, show a "No results" message
      if (matches === 0) {
        resultsContainer.innerHTML =
          '<p class="no-results">No results found</p>';
      }
    }
  });
</script>
